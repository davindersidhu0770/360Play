<?xml version="1.0" encoding="utf-8"?>

<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"

    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:weightSum="1"
        android:layout_alignParentTop="true">

        <TextView
            android:id="@+id/tvIsConnected1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal|top"
            android:background="#FF0000"
            android:textColor="#FFF"
            android:textSize="18dp"
            android:layout_marginBottom="5dp"
            android:text="is connected? " />
        <EditText

            android:layout_width="match_parent"
            android:layout_height="43dp"
            android:id="@+id/etResponse1"
            android:text=""
            android:textStyle="bold"
            android:inputType="textMultiLine"
            android:textColor="@android:color/transparent"
            android:background="#14000000"
            android:textColorHighlight="#000000"
            android:textIsSelectable="false"
            android:layout_gravity="left|top"
            android:editable="false"
            android:enabled="true"
            android:singleLine="true"
            android:maxLength="24"
            android:visibility="invisible" />

        <LinearLayout
            android:id="@+id/linear_no_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:visibility="gone">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:id="@+id/image_data"
                android:layout_gravity="center_horizontal"
                />



            <TextView
                android:id="@+id/txt_msg_next"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_horizontal"
                android:layout_marginTop="10dp"
                android:gravity="center_horizontal|center_vertical"
                android:text="There is no data to show you right now."
                android:textAllCaps="false"
                android:textColor="#000000"
                android:textSize="14dp" />

        </LinearLayout>
        <WebView
            android:layout_width="match_parent"
            android:layout_height="255dp"
            android:id="@+id/webView"
            android:layout_gravity="left|center_vertical"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_weight="0.29"
            android:visibility="gone"/>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="0.65">

            <Spinner
                android:layout_width="157dp"
                android:layout_height="26dp"
                android:id="@+id/spinner"
                android:layout_gravity="right|top" />

            <Spinner
                android:layout_width="152dp"
                android:layout_height="26dp"
                android:id="@+id/spinner2"
                android:layout_gravity="right|center_vertical" />

            <Spinner
                android:layout_width="148dp"
                android:layout_height="24dp"
                android:id="@+id/spinner3"
                android:layout_gravity="right|bottom" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView2"
                android:layout_gravity="center" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="28dp"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView"
                android:layout_gravity="center_horizontal|top" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:text="Small Text"
                android:id="@+id/textView3"
                android:layout_gravity="center_horizontal|bottom" />

            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/button_Get"
                android:layout_width="113dp"
                android:layout_height="60dp"
                android:text="Fetch"
                android:onClick="GetJson"
                android:layout_gravity="left|bottom"
                android:clickable="false"
                android:layout_weight="0.33"
                android:visibility="invisible"
                android:enabled="true" />
        </FrameLayout>




        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:weightSum="1">


            <Button xmlns:android="http://schemas.android.com/apk/res/android"
                android:id="@+id/button_send"
                android:layout_width="126dp"
                android:layout_height="60dp"
                android:text="Submit"
                android:onClick="sendMessage"
                android:clickable="true"
                android:layout_weight="0.38" />

            <Button android:layout_width="110dp"
                android:layout_height="61dp" android:id="@+id/closeapp"
                android:text="Scan Next"
                android:onClick="back"

                android:layout_weight="0.61" />

        </LinearLayout>






    </LinearLayout>
</RelativeLayout>